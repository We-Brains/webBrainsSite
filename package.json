{
	"name": "webbrains-site",
	"version": "1.0.0",
	"private": true,
	"author": "MMesyats<mmesyatz@gmail.com>",
	"keywords": [
		"gatsby"
	],
	"license": "MIT",
	"scripts": {
		"build": "gatsby build",
		"clean": "rimraf public",
		"deploy": "rm -rf .cache public && gatsby build --prefix-paths && firebase deploy --only hosting",
		"dev": "gatsby develop",
		"format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
		"lint": "eslint 'src/**/*.{ts,tsx}'",
		"start": "npm run dev",
		"test": "npm run type-check && npm run lint",
		"type-check": "tsc"
	},
	"engines": {
		"node": ">=8.0.0"
	},
	"dependencies": {
		"@google-cloud/firestore": "^4.1.0",
		"@techychan/react-responsive-carousel": "^3.2.6",
		"classnames": "^2.2.6",
		"dotenv": "^8.2.0",
		"firebase": "^7.13.2",
		"firebase-admin": "^8.10.0",
		"firebase-functions": "^3.5.0",
		"flickity": "^2.2.1",
		"gatsby": "^2.23.18",
		"gatsby-image": "^2.4.12",
		"gatsby-plugin-canonical-urls": "^2.3.9",
		"gatsby-plugin-facebook-pixel": "^1.0.3",
		"gatsby-plugin-firebase": "^0.2.0-beta.4",
		"gatsby-plugin-google-fonts": "^1.0.1",
		"gatsby-plugin-google-fonts-v2": "0.0.6",
		"gatsby-plugin-manifest": "^2.4.17",
		"gatsby-plugin-preact": "^4.0.8",
		"gatsby-plugin-prefetch-google-fonts": "^1.4.3",
		"gatsby-plugin-purgecss": "^5.0.0",
		"gatsby-plugin-react-helmet": "^3.3.9",
		"gatsby-plugin-react-svg": "^3.0.0",
		"gatsby-plugin-robots-txt": "^1.5.0",
		"gatsby-plugin-sass": "^2.3.10",
		"gatsby-plugin-sharp": "^2.6.17",
		"gatsby-plugin-sitemap": "^2.4.10",
		"gatsby-plugin-typescript": "^2.4.12",
		"gatsby-plugin-web-font-loader": "^1.0.4",
		"gatsby-plugin-webfonts": "^1.1.3",
		"gatsby-plugin-zopfli": "^1.3.2",
		"gatsby-remark-custom-blocks": "^2.3.9",
		"gatsby-source-strapi": "0.0.12",
		"gatsby-transformer-remark": "^2.8.23",
		"gatsby-transformer-sharp": "^2.5.10",
		"nodemailer": "^6.4.6",
		"nuka-carousel": "^4.7.0",
		"preact": "^10.4.5",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-flickity-component": "^3.5.0",
		"react-fullpage": "^0.1.19",
		"react-helmet": "^5.2.1",
		"react-leaf-carousel": "^2.0.3",
		"react-multi-carousel": "^2.5.3",
		"react-simply-carousel": "^2.1.9"
	},
	"devDependencies": {
		"@types/classnames": "^2.2.10",
		"@types/node": "^12.12.31",
		"@types/react": "^16.9.25",
		"@types/react-dom": "^16.9.5",
		"@types/react-helmet": "^5.0.15",
		"@typescript-eslint/eslint-plugin": "^1.10.2",
		"@typescript-eslint/parser": "^1.10.2",
		"commitlint": "^8.3.5",
		"eslint": "^6.8.0",
		"eslint-config-blvd": "^0.1.1",
		"eslint-config-prettier": "^5.0.0",
		"eslint-plugin-prettier": "^3.1.2",
		"gatsby-plugin-eslint": "^2.0.8",
		"gatsby-plugin-webpack-bundle-analyser-v2": "^1.1.10",
		"gh-pages": "^2.2.0",
		"husky": "^3.1.0",
		"node-sass": "^4.13.1",
		"prettier": "^1.19.1",
		"rimraf": "^2.6.3",
		"stylelint": "^13.2.1",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-declaration-use-variable": "^1.7.2",
		"stylelint-high-performance-animation": "^1.5.0",
		"stylelint-order": "^4.0.0",
		"stylelint-scss": "^3.16.0",
		"typescript": "^3.8.3"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-recommended",
			"stylelint-config-rational-order"
		],
		"plugins": [
			"stylelint-order",
			"stylelint-scss",
			"stylelint-config-rational-order/plugin",
			"stylelint-high-performance-animation",
			"stylelint-declaration-use-variable"
		],
		"rules": {
			"no-empty-source": [
				true,
				{
					"severity": "warning"
				}
			],
			"plugin/no-low-performance-animation-properties": [
				true,
				{
					"severity": "warning"
				}
			],
			"sh-waqar/declaration-use-variable": [
				[
					"/color/",
					"font-size",
					"font-family",
					"font-weight"
				]
			],
			"order/properties-order": [],
			"plugin/rational-order": [
				true,
				{
					"border-in-box-model": false,
					"empty-line-between-groups": false
				}
			],
			"selector-type-no-unknown": [
				true,
				{
					"ignore": [
						"custom-elements"
					]
				}
			],
			"no-descending-specificity": true,
			"at-rule-no-unknown": null,
			"scss/at-rule-no-unknown": true
		}
	}
}
